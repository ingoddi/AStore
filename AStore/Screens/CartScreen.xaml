<Window x:Class="AStore.Screens.CartScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AStore.Screens"
        mc:Ignorable="d"
        Title="CartScreen" Height="450" Width="800">
    <Grid Height="434" VerticalAlignment="Top">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF0F1246"/>
                <GradientStop Color="#FF3C67AD" Offset="0.883"/>
            </LinearGradientBrush>
        </Grid.Background>
        <ListView Name="CartItemsListView" Margin="10" 
              ItemsSource="{Binding}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Product Name" DisplayMemberBinding="{Binding Product.Name}"/>
                    <GridViewColumn Header="Quantity" DisplayMemberBinding="{Binding Quantity}"/>
                    <GridViewColumn Header="Price" DisplayMemberBinding="{Binding Product.Price}"/>
                    <GridViewColumn Header="Actions">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Remove" Click="Remove_Click"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Name="TotalPriceLabel" Margin="682,0,0,405" VerticalAlignment="Bottom" HorizontalAlignment="Left" RenderTransformOrigin="34.552,-39.203"/>
        <Button Name="PlaceOrderButton" Content="Оформить заказ" Click="PlaceOrder_Click" Margin="0,0,50,47" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
    </Grid>
</Window>
