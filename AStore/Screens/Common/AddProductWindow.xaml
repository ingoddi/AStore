<Window x:Class="AStore.Screens.Common.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AStore.Screens.Common"
        mc:Ignorable="d"
        Title="AddProductWindow" Height="450" Width="800">

    <Grid>
        <StackPanel Margin="20">
            <TextBox x:Name="ProductName" Margin="0,0,0,10" Height="40"/>
            <TextBox x:Name="ProductDescription" Margin="0,0,0,10" Height="40"/>
            <TextBox x:Name="ProductPrice" Margin="0,0,0,10" Height="40"/>
            <ComboBox x:Name="ProductCategory" Margin="0,0,0,10" Height="40" DisplayMemberPath="Name"/>
            <Button Content="Сохранить" Height="40" Click="SaveProduct_Click"/>
        </StackPanel>
    </Grid>
</Window>